<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="treeAutoCompleteStyle" parent="android:Widget.AutoCompleteTextView">
        <!--<item name="android.textColor">@color/colorBlack</item>-->
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:dropDownHeight">200dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
</resources>
