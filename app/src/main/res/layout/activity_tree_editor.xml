<?xml version="1.0" encoding="utf-8"?>

<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:flexDirection="column">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:layout_minHeight="50dp">

        <AutoCompleteTextView
            android:id="@+id/projectName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:completionHint="Project Name"
            android:text="@string/project_name"
            app:layout_flexBasisPercent="50%"
            tools:ignore="LabelFor" />

        <AutoCompleteTextView
            android:id="@+id/treeId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/projectName"
            android:text="@string/new_tree"
            app:layout_flexBasisPercent="50%"
            tools:ignore="LabelFor" />
    </com.google.android.flexbox.FlexboxLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum=".5"
            app:flexWrap="wrap">


            <AutoCompleteTextView
                android:id="@+id/species_spinner"
                style="@style/treeAutoCompleteStyle"
                android:completionHint="@string/species_hint"
                android:hint="@string/species_hint" />

            <MultiAutoCompleteTextView
                android:id="@+id/dbh_spinner"
                style="@style/treeAutoCompleteStyle"
                android:completionHint="@string/dbh_hint"
                android:hint="@string/dbh_hint" />

            <AutoCompleteTextView
                android:id="@+id/health_spinner"
                style="@style/treeAutoCompleteStyle"
                android:completionHint="@string/health_hint"
                android:hint="@string/health_hint" />


            <AutoCompleteTextView
                android:id="@+id/grade_spinner"
                style="@style/treeAutoCompleteStyle"
                android:completionHint="@string/grade_hint"
                android:hint="@string/grade_hint" />

            <AutoCompleteTextView
                android:id="@+id/status_spinner"
                style="@style/treeAutoCompleteStyle"
                android:completionHint="@string/status_hint"
                android:hint="@string/status_hint" />

            <MultiAutoCompleteTextView
                android:id="@+id/notes_spinner"
                style="@style/treeAutoCompleteStyle"
                android:completionHint="@string/notes_hint"
                android:hint="@string/notes_hint" />

        </com.google.android.flexbox.FlexboxLayout>
    </ScrollView>

    <EditText
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:hint="@string/additional_notes"
        android:inputType="text"
        android:paddingTop="10dp" />


    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:layout_maxHeight="200dp">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignContent="stretch"
            app:justifyContent="center">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexDirection="column"
                app:layout_minWidth="150dp">

                <Button
                    android:id="@+id/take_picture"
                    android:layout_width="125dp"
                    android:layout_height="75dp"
                    android:drawableLeft="@android:drawable/ic_menu_camera"
                    android:text="Take Picture" />

                <Button
                    android:id="@+id/view_pictures"
                    android:layout_width="125dp"
                    android:layout_height="75dp"
                    android:drawableLeft="@drawable/ic_camera_roll_black_24dp"
                    android:text="View Photos" />
            </com.google.android.flexbox.FlexboxLayout>

            <ImageView
                android:id="@+id/treePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tree_view_login" />
        </com.google.android.flexbox.FlexboxLayout>


    </com.google.android.flexbox.FlexboxLayout>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#a0db8e"
        android:drawableLeft="@drawable/ic_cloud_upload_black_24dp"
        android:drawableStart="@drawable/ic_cloud_upload_black_24dp"
        android:onClick="btnAddToDatabase"
        android:text="Add to Database"
        app:layout_minHeight="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:layout_minHeight="50dp">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavView_Bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:menu="@menu/options_menu" />

    </RelativeLayout>
</com.google.android.flexbox.FlexboxLayout>